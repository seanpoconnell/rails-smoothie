<!-- banner -->
<div class="home-banner mb-5">
  <h1 class="ml3">Smoothies</h1>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/2.0.2/anime.min.js"></script>
</div>

<div class="container mb-4" style="display: flex; justify-content: space-around;">

  <div class="row">
    <% @smoothies.each do |smoothie| %>
      <div class="col-xs-12 col-sm-6 col-md-4 mb-3">
        <div class="card m-0 p-0">
              <img class="card-img-top crop" src="https://images.unsplash.com/photo-1505252585461-04db1eb84625?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=652&q=80" alt="Smoothies">
              <div class="card-body">
                <h5 class="card-title">
                  <%= smoothie.name %>
                </h5>
                <p class="card-text">some text</p>
                <%= link_to 'Recipe', smoothy_path(smoothie), class: "btn btn-primary" %>
              </div>
        </div>
      </div>
    <% end %>
  <div>
</div>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <div class="container">
          <div class="container" style="width: 25em;">
            <%= simple_form_for @smoothie do |f| %>
              <%= f.input :name , label: "Smoothie name" %>
              <%= f.submit class:'btn btn-primary' %>
            <% end %>
          </div>
        </div>
        
      </div>
    </div>
  </div>
</div>