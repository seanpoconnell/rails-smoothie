<div class="container-fluid">
  <div class="row">
    <div class="col">
      <img style="width: 100%; height: auto;" src="https://images.unsplash.com/photo-1505252585461-04db1eb84625?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=652&q=80" alt="Smoothies">
    </div>

    <div class="col">
      <h1>
        <%= @smoothie.name %>
      </h1>
      <h5 class="mb-3">Ingredients</h5>
        <% @smoothie.doses.each do |dose| %>
          <ul class="pl-0"><h7><%= dose.description %> <%= dose.ingredient.name %></h7></ul>
        <% end %>
      <%= link_to 'Add Ingredient', new_smoothy_dose_path(@smoothie) %>
    </div>
  </div>
</div>
